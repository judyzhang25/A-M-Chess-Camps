<p id="notice"><%= notice %></p>

<% if @students.empty? %>
  <h3>There are no students in the system at this time</h3>
<% else %>
  <h3>Students</h3>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Family</th>
      <th>Phone</th>
      <th>Registrations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.proper_name, student %></td>
        <td><%= link_to student.family.family_name, student.family %></td>
        <td><%= number_to_phone student.family.phone %></td>
        <td><%= student.registrations.size %></td>
        <td><%= link_to 'Edit', edit_student_path(student), :class=>"btn waves-effect waves-light blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'families' %>
</span>

    <% end %>