  <div class="row">

  <div class= "col s12">
  <p id="notice"><%= notice %></p>
  <h4 id= "headline" class="center"><br><%= state %> Locations<br><br></h4><br>

  <table class="highlight">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Max Capacity</th>
        <% if can? :update, Location %>
        <th colspan="3"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% locations.each do |location| %>
        <tr>
          <td><%= link_to location.name, location %></td>
          <td><%= render :partial => "partials/address_info", locals: {location: location} %></td>
          <td><%= location.max_capacity %></td>
          <td>
            <% if can? :update, Location %>
            <%= link_to edit_location_path(location) do %>
              <i class="material-icons">edit</i>
            <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate locations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>