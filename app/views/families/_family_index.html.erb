<p id="notice"><%= notice %></p>

<% if @families.empty? %>
  <h3>There are no families in the system at this time</h3>
<% else %>
  <h4>Families</h4>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent Name</th>
      <th>Phone</th>
      <th>Students</th>
      <th>Registrations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= link_to family.family_name, family %></td>
        <td><%= family.parent_first_name %></td>
        <td><%= number_to_phone family.phone %></td>
        <td><%= family.students.size %></td>
        <td><%= family.registrations.size %></td>
        <td><%= link_to 'Edit', edit_family_path(family), :class=>"btn waves-effect waves-light blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'families' %>
</span>

    <% end %>