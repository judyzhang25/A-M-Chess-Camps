<% if @users.empty? %>
  <h4 id= "headline" class="center"><br>There are no users in the system at this time.<br><br></h4><br>
<% else %>
  <h4 id= "headline" class="center"><br>Users<br><br></h4><br>

  <table class="highlight">
  <thead>
    <tr>
      <th>Email</th>
      <th>Username</th>
      <th>Phone</th>
      <% if logged_in? && current_user.role?(:admin) %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user %></td>
        <td><%= user.username %></td>
        <td><%= number_to_phone user.phone %></td>
        <% if logged_in? && current_user.role?(:admin) %>
        <td>
          <%= link_to edit_user_path(user) do %>
            <i class="material-icons">edit</i>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% end %>

<span class="paginate">
  <%= will_paginate @users, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'active_users' %>
</span>

